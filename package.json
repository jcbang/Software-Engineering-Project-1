		"aws-sdk": "^2.530.0",
		"bcrypt": "^3.0.6",
		"body-parser": "^1.19.0",
		"concurrently": "^4.1.2",
		"express": "^4.17.1",
		"mongoose": "^5.6.11"
	},
	"devDependencies": {
		"nodemon": "^1.19.1"
	}
}
